<Page x:Class="Shop.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TabControl x:Name="TabControl" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <TabItem x:Name="TbItAddItem" Header="Add Item">
                <Frame Name="AddItemFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TbItAddRecipe" Header="Add Recipe">
                <Frame Name="AddRecipeFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TbItDish" Header="Dish">
                <StackPanel Margin="5" Grid.Row="0">
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</Page>